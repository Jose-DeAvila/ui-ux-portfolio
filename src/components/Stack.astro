---
import Image from "astro/components/Image.astro";
import GirlWithStar from "../assets/girl-with-star.jpeg";
import Figma from "../assets/figma.svg";
import Framer from "../assets/framer.svg";
import Canva from "../assets/canva.svg";
import Harry from "../assets/harry.jpg";
---

<section class="py-12 md:py-16 lg:py-20 bg-black">
	<div class="max-w-full mx-auto px-4 sm:px-6 lg:px-8">
		<div class="mb-8 md:mb-12">
			<h2
				class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold w-full lg:w-1/4 mb-3"
			>
				FAVOURITE STACK
			</h2>
			<p class="text-lg md:text-xl lg:text-2xl">
				ESSENTIAL TOOLS FOR UI/UX DESIGN
			</p>
		</div>
		<div class="flex flex-col lg:flex-row mb-8 md:mb-12 gap-8 lg:gap-12">
			<div class="w-full lg:w-1/2 flex justify-center lg:justify-start">
				<Image
					src={GirlWithStar}
					alt="Creative designer with star representing innovation and creativity"
					class="w-full max-w-md lg:w-2/3 h-auto object-contain"
				/>
			</div>
			<div
				class="w-full lg:w-1/2 flex flex-col gap-8 md:gap-10 lg:gap-12"
			>
				<div class="flex flex-col sm:flex-row gap-4 sm:gap-6">
					<Image
						class="max-h-12 md:max-h-14 w-fit px-3 self-start"
						src={Figma}
						alt="Figma Logotype"
					/>
					<div class="flex-1">
						<div class="mb-4 md:mb-6">
							<h4
								class="font-bold text-lg md:text-xl lg:text-2xl mb-1"
							>
								FIGMA
							</h4>
							<p
								class="font-semibold italic text-sm md:text-base lg:text-[20px]"
							>
								UI/UX DESIGN | DESIGN SYSTEMS
							</p>
						</div>
						<p
							class="text-sm md:text-base lg:text-lg xl:text-2xl leading-relaxed"
						>
							Complete mastery of interface design, the creation
							and management of robust design systems, and
							real-time collaborative prototyping.
						</p>
					</div>
				</div>
				<div class="flex flex-col sm:flex-row gap-4 sm:gap-6">
					<Image
						class="max-h-12 md:max-h-14 w-fit px-3 self-start"
						src={Framer}
						alt="Framer Logotype"
					/>
					<div class="flex-1">
						<div class="mb-4 md:mb-6">
							<h4
								class="font-bold text-lg md:text-xl lg:text-2xl mb-1"
							>
								FRAMER
							</h4>
							<p
								class="font-semibold italic text-sm md:text-base lg:text-[20px]"
							>
								ADVANCED PROTOTYPING | WEB DEPLOYMENT
							</p>
						</div>
						<p
							class="text-sm md:text-base lg:text-lg xl:text-2xl leading-relaxed"
						>
							Experience creating high-fidelity prototypes with
							complex interactions and animations, including the
							ability to transform designs into functional
							websites.
						</p>
					</div>
				</div>
				<div class="flex flex-col sm:flex-row gap-4 sm:gap-6">
					<Image
						class="max-h-12 md:max-h-14 w-fit px-3 self-start"
						src={Canva}
						alt="Canva Logotype"
					/>
					<div class="flex-1">
						<div class="mb-4 md:mb-6">
							<h4
								class="font-bold text-lg md:text-xl lg:text-2xl mb-1"
							>
								CANVA
							</h4>
							<p
								class="font-semibold italic text-sm md:text-base lg:text-[20px]"
							>
								GRAPHIC DESIGN | VISUAL CONTENT
							</p>
						</div>
						<p
							class="text-sm md:text-base lg:text-lg xl:text-2xl leading-relaxed"
						>
							Ability to quickly create visual materials,
							impactful presentations, and supporting graphics for
							projects and marketing.
						</p>
					</div>
				</div>
			</div>
		</div>
		<Image
			src={Harry}
			alt="Creative workspace and design environment"
			class="rounded-2xl w-full h-auto object-cover"
		/>
	</div>
</section>
