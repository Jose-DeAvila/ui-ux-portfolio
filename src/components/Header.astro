<header class="bg-black fixed top-0 left-0 right-0 z-50">
	<nav class="max-w-full mx-auto px-4 sm:px-6 lg:px-8">
		<div class="flex justify-between items-center py-6">
			<!-- Logo/Brand -->
			<div class="flex-shrink-0 flex gap-12">
				<a href="#" class="text-2xl font-bold text-white">
					Maitee Batista
				</a>
				<p class="hidden md:block text-2xl font-bold">
					Santo Domingo, R.D
				</p>
			</div>

			<!-- Desktop Navigation -->
			<div class="hidden lg:block">
				<div class="flex gap-10 items-center">
					<a
						href="#projects"
						class="text-[20px] hover:text-cyan-200 hover:scale-105 transition-all"
					>
						Projects
					</a>
					<a
						href="#about"
						class="text-[20px] hover:text-cyan-200 hover:scale-105 transition-all"
					>
						About
					</a>
					<a
						href="#services"
						class="text-[20px] hover:text-cyan-200 hover:scale-105 transition-all"
					>
						Services
					</a>
					<a
						href="#contact"
						class="text-[20px] text-black bg-white py-2 px-4 rounded-2xl hover:scale-105 transition-transform"
					>
						Contact Now
					</a>
				</div>
			</div>

			<!-- Mobile menu button -->
			<div class="lg:hidden">
				<button
					id="mobile-menu-button"
					type="button"
					class="text-gray-300 hover:text-cyan-400 focus:outline-none focus:ring-2 focus:ring-cyan-500 focus:ring-offset-2 focus:ring-offset-gray-900 p-2 transition-colors"
					aria-expanded="false"
					aria-controls="mobile-menu"
				>
					<!-- Hamburger Icon -->
					<svg
						id="hamburger-icon"
						class="h-6 w-6 transition-transform duration-300"
						fill="none"
						viewBox="0 0 24 24"
						stroke="currentColor"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M4 6h16M4 12h16M4 18h16"></path>
					</svg>
					<!-- Close Icon (hidden by default) -->
					<svg
						id="close-icon"
						class="h-6 w-6 transition-transform duration-300 hidden"
						fill="none"
						viewBox="0 0 24 24"
						stroke="currentColor"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M6 18L18 6M6 6l12 12"></path>
					</svg>
				</button>
			</div>
		</div>

		<!-- Mobile Navigation Menu -->
		<div
			id="mobile-menu"
			class="lg:hidden fixed inset-0 bg-black bg-opacity-95 z-[60] transform -translate-x-full transition-transform duration-300 ease-in-out"
		>
			<div class="flex flex-col h-full">
				<!-- Header with close button -->
				<div
					class="flex justify-between items-center p-6 border-b border-gray-800"
				>
					<h2 class="text-2xl font-bold text-white">Men√∫</h2>
					<button
						id="mobile-menu-close"
						type="button"
						class="text-gray-300 hover:text-cyan-400 focus:outline-none p-2"
					>
						<svg
							class="h-6 w-6"
							fill="none"
							viewBox="0 0 24 24"
							stroke="currentColor"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M6 18L18 6M6 6l12 12"></path>
						</svg>
					</button>
				</div>

				<!-- Navigation Links -->
				<nav class="flex-1 flex flex-col justify-center px-6 space-y-8">
					<a
						href="#projects"
						class="text-3xl font-semibold text-white hover:text-cyan-400 transition-colors duration-300 py-4 border-b border-gray-800 mobile-menu-link"
					>
						Projects
					</a>
					<a
						href="#about"
						class="text-3xl font-semibold text-white hover:text-cyan-400 transition-colors duration-300 py-4 border-b border-gray-800 mobile-menu-link"
					>
						About
					</a>
					<a
						href="#services"
						class="text-3xl font-semibold text-white hover:text-cyan-400 transition-colors duration-300 py-4 border-b border-gray-800 mobile-menu-link"
					>
						Services
					</a>
					<a
						href="#contact"
						class="text-3xl font-semibold text-white bg-cyan-600 py-4 px-6 rounded-2xl hover:bg-cyan-700 transition-colors duration-300 text-center mobile-menu-link"
					>
						Contact Now
					</a>
				</nav>

				<!-- Footer -->
				<div class="p-6 border-t border-gray-800">
					<p class="text-gray-400 text-center">
						Maitee Batista - Santo Domingo, R.D
					</p>
				</div>
			</div>
		</div>
	</nav>
</header>

<script>
	let isMenuOpen = false;

	function toggleMobileMenu() {
		const mobileMenu = document.getElementById("mobile-menu");
		const hamburgerIcon = document.getElementById("hamburger-icon");
		const closeIcon = document.getElementById("close-icon");
		const menuButton = document.getElementById("mobile-menu-button");

		// Check if all elements exist before proceeding
		if (!mobileMenu || !hamburgerIcon || !closeIcon || !menuButton) {
			console.warn("One or more mobile menu elements not found");
			return;
		}

		isMenuOpen = !isMenuOpen;

		if (isMenuOpen) {
			// Open menu
			mobileMenu.classList.remove("-translate-x-full");
			mobileMenu.classList.add("translate-x-0");
			hamburgerIcon.classList.add("hidden");
			closeIcon.classList.remove("hidden");
			menuButton.setAttribute("aria-expanded", "true");
			document.body.style.overflow = "hidden"; // Prevent background scrolling
		} else {
			// Close menu
			mobileMenu.classList.remove("translate-x-0");
			mobileMenu.classList.add("-translate-x-full");
			hamburgerIcon.classList.remove("hidden");
			closeIcon.classList.add("hidden");
			menuButton.setAttribute("aria-expanded", "false");
			document.body.style.overflow = ""; // Restore scrolling
		}
	}

	function closeMobileMenu() {
		if (isMenuOpen) {
			toggleMobileMenu();
		}
	}

	// Add event listeners
	document.addEventListener("DOMContentLoaded", function () {
		const menuButton = document.getElementById("mobile-menu-button");
		const closeButton = document.getElementById("mobile-menu-close");
		const mobileMenu = document.getElementById("mobile-menu");
		const mobileMenuLinks = document.querySelectorAll(".mobile-menu-link");

		// Add event listener to menu button
		if (menuButton) {
			menuButton.addEventListener("click", toggleMobileMenu);
		} else {
			console.warn("Mobile menu button not found");
		}

		// Add event listener to close button
		if (closeButton) {
			closeButton.addEventListener("click", closeMobileMenu);
		} else {
			console.warn("Mobile menu close button not found");
		}

		// Add event listeners to all mobile menu links
		mobileMenuLinks.forEach(function (link) {
			link.addEventListener("click", function (e) {
				// Close the menu when any link is clicked
				closeMobileMenu();
			});
		});

		// Close menu when clicking outside
		if (mobileMenu) {
			mobileMenu.addEventListener("click", function (e) {
				if (e.target === mobileMenu) {
					closeMobileMenu();
				}
			});
		} else {
			console.warn("Mobile menu element not found");
		}

		// Close menu on escape key
		document.addEventListener("keydown", function (e) {
			if (e.key === "Escape" && isMenuOpen) {
				closeMobileMenu();
			}
		});
	});
</script>
